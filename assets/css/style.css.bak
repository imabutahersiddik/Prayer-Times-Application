:root {
    --primary-color: #2c3e50;
    --secondary-color: #34495e;
    --accent-color: #27ae60;
    --text-color: #333;
    --light-bg: #f5f6fa;
    --error-color: #e74c3c;
    --success-color: #2ecc71;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: var(--light-bg);
    color: var(--text-color);
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

header {
    text-align: center;
    margin-bottom: 30px;
    padding: 20px;
    background: white;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.current-time {
    font-size: 1.2em;
    color: var(--secondary-color);
    margin-top: 10px;
}

.location-selector {
    text-align: center;
    margin-bottom: 30px;
}

.btn-location {
    background-color: var(--accent-color);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1em;
    transition: background-color 0.3s ease;
}

.btn-location:hover {
    background-color: #219a52;
}

.prayer-times {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin: 20px 0;
}

.loading {
    text-align: center;
    grid-column: 1 / -1;
    padding: 20px;
    color: var(--secondary-color);
}

.prayer-card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    text-align: center;
    transition: all 0.3s ease;
    cursor: pointer;
}

.prayer-card:hover,
.prayer-card:focus {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    outline: none;
}

.prayer-icon {
    font-size: 2em;
    margin-bottom: 10px;
}

.prayer-card h3 {
    color: var(--primary-color);
    margin-bottom: 10px;
}

.time {
    font-size: 1.2em;
    color: var(--accent-color);
    font-weight: bold;
}

.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    backdrop-filter: blur(5px);
}

.modal-content {
    background-color: var(--light-bg);
    margin: 15% auto;
    padding: 20px;
    border-radius: 10px;
    width: 80%;
    max-width: 500px;
    position: relative;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transform: scale(0.7);
    opacity: 0;
    transition: all 0.3s ease-in-out;
}

.modal-animate {
    transform: scale(1);
    opacity: 1;
}

.close {
    position: absolute;
    right: 20px;
    top: 10px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    color: var(--text-color);
}

.close:hover {
    color: var(--accent-color);
}

.prayer-info {
    margin-top: 20px;
}

.prayer-requirements {
    margin-top: 20px;
    padding: 15px;
    background: rgba(0,0,0,0.05);
    border-radius: 8px;
}

#modal-prayer-time {
    font-size: 1.2em;
    color: var(--accent-color);
    margin: 10px 0;
}

#modal-prayer-description {
    line-height: 1.6;
    margin: 15px 0;
}

#modal-prayer-rakats {
    font-size: 1.1em;
    margin-top: 10px;
}

.qibla-direction {
    text-align: center;
    margin: 30px 0;
    padding: 20px;
    background: white;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

#qibla-compass {
    margin: 20px auto;
    display: block;
}

#qibla-angle {
    color: var(--secondary-color);
    font-size: 1.1em;
}

footer {
    text-align: center;
    margin-top: 30px;
    padding: 20px;
    color: var(--secondary-color);
}

#location-status {
    margin: 10px 0;
    color: var(--accent-color);
}

#current-location {
    margin-top: 10px;
    color: var(--secondary-color);
}

@media (prefers-color-scheme: dark) {
    :root {
        --primary-color: #ecf0f1;
        --secondary-color: #bdc3c7;
        --text-color: #ecf0f1;
        --light-bg: #2c3e50;
    }

    .prayer-card,
    .modal-content,
    header,
    .qibla-direction {
        background: #34495e;
    }
}

@media (max-width: 768px) {
    .container {
        padding: 10px;
    }
    
    .prayer-times {
        grid-template-columns: repeat(2, 1fr);
    }

    .modal-content {
        width: 90%;
        margin: 10% auto;
    }
}

@media (max-width: 480px) {
    .prayer-times {
        grid-template-columns: 1fr;
    }

    .modal-content {
        width: 95%;
        margin: 5% auto;
    }
}